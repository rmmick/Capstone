<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Financial Report:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="65dp"
            android:layout_toStartOf="@+id/houseTotal"
            android:text="House:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp"
            android:text="Vehicle:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="20dp"
            android:text="Food:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:text="Pets:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="20dp"
            android:text="Entertainment:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="20dp"
            android:text="Other:"
            android:textSize="15dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/houseTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/vehicleTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/houseTotal"
            android:text="TextView" />

        <TextView
            android:id="@+id/foodTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignEnd="@+id/vehicleTotal"
            android:text="TextView" />

        <TextView
            android:id="@+id/petsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignStart="@+id/foodTotal"
            android:text="TextView" />

        <TextView
            android:id="@+id/entertainmentTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/petsTotal"
            android:text="TextView" />

        <TextView
            android:id="@+id/otherTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignEnd="@+id/entertainmentTotal"
            android:text="TextView"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/houseLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/houseTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/vehicleTotal"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/vehicleLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vehicleTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/vehicleTotal"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/foodLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/foodTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/foodTotal"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/petsLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/petsTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/petsTotal"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/entertaimentLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/entertainmentTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/entertainmentTotal"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/otherLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/otherTotal"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/otherTotal"
            android:paddingBottom="10dp"
            android:text="TextView"
            android:textColor="@color/Red"/>

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/houseTotal"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="22dp"
            android:text="Category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label1"
            android:layout_alignBottom="@+id/label1"
            android:layout_alignStart="@+id/houseTotal"
            android:text="Total Spent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/label2"
            android:layout_alignBottom="@+id/label2"
            android:layout_alignStart="@+id/houseLimit"
            android:text="Budget Limit"
            android:textColor="@color/Red"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>